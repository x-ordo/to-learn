{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@to-learn/contracts": ["packages/contracts/dist"],
      "@to-learn/contracts/*": ["packages/contracts/dist/*"]
    }
  }
}
